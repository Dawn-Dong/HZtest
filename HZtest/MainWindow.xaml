<Window x:Class="HZtest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HZtest"
        mc:Ignorable="d"
        Title="华中数控" Height="550" Width="990">
    <Grid Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <!-- 标签列 -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="LightGray" Grid.RowSpan="6" />
        <Button Content="主页"  Grid.Column="0"  Grid.Row="0"  Click="HomeButton_Click"/>
        <Button Content="文件"  Grid.Column="0"  Grid.Row="1"  Click="FileButton_Click"/>
        
        
        <Frame Grid.Column="1"  Grid.RowSpan="6" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <TextBlock x:Name="StatusTextBlock" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" FontSize="16" FontWeight="Bold"  />

    </Grid>

</Window>
