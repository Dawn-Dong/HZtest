<UserControl x:Class="HZtest.View.Dialogs.UploadFileDialogs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HZtest.View.Dialogs"
             xmlns:conv="clr-namespace:HZtest.Converters"
             mc:Ignorable="d" 
            >
    <UserControl.Resources>
        <conv:IntToBoolConverter x:Key="IntToBoolConverter" />
    </UserControl.Resources>

    <Border Background="White" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="20" Width="400" Height="200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="上传程序到设备" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1"   Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock Text="程序命名：" FontSize="13" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center"/>
                <TextBox x:Name="FileNameTextBox" Text="{Binding FileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200" />
            </StackPanel>


            <StackPanel Grid.Row="2"   Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock Text="上传程序：" FontSize="13" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center"/>
                <TextBox  Text="{Binding LocalFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200" IsReadOnly="True" Background="#FFA4A4A4" BorderBrush="Gray"/>
                <Button Content="浏览..."  Command="{Binding SelectFileCommand}" Margin="5,0"/>
            </StackPanel>



            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="上传" Click="ConfirmButton_Click" Margin="5" Width="80"/>
                <Button Content="取消" Click="CancelButton_Click" Margin="5" Width="80"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
