<UserControl x:Class="HZtest.Views.Dialogs.ModeSelectionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Border Background="White" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="20" Width="300" Height="200">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0" Text="选择运行模式" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

			<StackPanel Grid.Row="1">
				<RadioButton x:Name="AutoMode" Content="自动模式" IsChecked="True" Margin="5"/>
				<RadioButton x:Name="ManualMode" Content="手动模式" Margin="5"/>
				<RadioButton x:Name="ProgramMode" Content="编程模式" Margin="5"/>
			</StackPanel>

			<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Content="确定" Click="ConfirmButton_Click" Margin="5" Width="80"/>
				<Button Content="取消" Click="CancelButton_Click" Margin="5" Width="80"/>
			</StackPanel>
		</Grid>
	</Border>
</UserControl>