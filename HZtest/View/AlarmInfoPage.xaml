<Page x:Class="HZtest.View.AlarmInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HZtest.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AlarmInfoPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="报警信息查询页面" Grid.Row="0" Grid.Column="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="刷新报警信息" Grid.Row="0" Grid.Column="1" Width="150" Height="40" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding RefreshAlarmInfoCommand}"/>



        <Grid Grid.Row="1" Grid.ColumnSpan="2" Background="#FF838383">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>

                <!--表头行-->

                <RowDefinition Height="*"/>

                <!--数据行-->

            </Grid.RowDefinitions>


            <!--✅ 表头（始终存在，与数据行列宽严格对齐）-->

            <Grid Grid.Row="0" Background="#2D2D30" Height="36">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="报警代码" 
                           Grid.Column="0" 
                           Foreground="LightGray" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="14"/>
                <TextBlock Text="报警内容" 
                           Grid.Column="1" 
                           Foreground="LightGray" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </Grid>

            <!--✅ 数据区域（有数据时显示）-->

            <ItemsControl 
                Grid.Row="1"
                ItemsSource="{Binding AlarmInfoList}"
                Visibility="{Binding AlarmInfoList.Count, 
                             Converter={StaticResource CountToVisibilityConverter}, 
                             ConverterParameter=>0}"
                VirtualizingPanel.IsVirtualizing="True"
                VirtualizingPanel.VirtualizationMode="Recycling"
                ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#3A3A3A" BorderThickness="0,1,0,0" Background="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Number}" 
                                           Margin="12,8" 
                                           Foreground="Black"
                                           FontFamily="Consolas"
                                           TextTrimming="CharacterEllipsis"
                                           FontSize="13"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           />
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Text}" 
                                           Margin="12,8" 
                                           Foreground="Red"
                                           TextTrimming="CharacterEllipsis"
                                           FontSize="14"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


            <!--✅ 无数据提示（覆盖整个区域，含表头位置）-->
            <TextBlock 
                Grid.RowSpan="2"  
                Text="当前无报警" 
                Visibility="{Binding AlarmInfoList.Count, 
                             Converter={StaticResource CountToVisibilityConverter}, 
                             ConverterParameter=0}"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                FontSize="24" 
                FontWeight="Bold"
                Foreground="#FF170C0C"/>
        </Grid>

    </Grid>

</Page>


