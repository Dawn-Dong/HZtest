<Page x:Class="HZtest.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HZtest.View"
      xmlns:vm="clr-namespace:HZtest.ViewModels"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="800"
      
      Title="HomePage">

    <!-- 设置DataContext --><!--
    <Page.DataContext>
        <vm:HomePageViewModel/>
        --><!-- 绑定ViewModel --><!--
    </Page.DataContext>-->


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="130"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>

        <TextBlock  Grid.Row="0" Grid.Column="0" Text="轴" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />
        <TextBlock  Grid.Row="0" Grid.Column="1" Text="机床实际" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />
        <TextBlock  Grid.Row="0" Grid.Column="2" Text="剩余进给" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />

        <TextBlock  Grid.Row="1" Grid.Column="3" Text="mm" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />
        <TextBlock  Grid.Row="2" Grid.Column="3" Text="mm" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />
        <TextBlock  Grid.Row="3" Grid.Column="3" Text="mm" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />
        <TextBlock  Grid.Row="4" Grid.Column="3" Text="deg" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />
        <TextBlock  Grid.Row="5" Grid.Column="3" Text="deg" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />



        <TextBlock  x:Name="XAxisValue" Grid.Row="1" Grid.Column="0"  Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" >
         <Viewbox Width="24" Height="24">
            <Path Data="{StaticResource RotationAxis}" Fill="#4CAF50"/>
          </Viewbox>X
        </TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding  XAxisActualFeedRateValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding  XAxisRemainingFeedValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>



        <TextBlock  x:Name="YAxisValue" Grid.Row="2" Grid.Column="0"  Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  >
             <Viewbox Width="24" Height="24">
    <Path Data="{StaticResource RotationAxis}" Fill="#4CAF50"/>
  </Viewbox>Y
        </TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding  YAxisActualFeedRateValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding  YAxisRemainingFeedValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>

        <TextBlock x:Name="ZAxisValue"  Grid.Row="3" Grid.Column="0"  Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  >
             <Viewbox Width="24" Height="24">
    <Path Data="{StaticResource RotationAxis}" Fill="#4CAF50"/>
  </Viewbox>Z
        </TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding  ZAxisActualFeedRateValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding  ZAxisRemainingFeedValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>

        <TextBlock  x:Name="BAxisValue" Grid.Row="4" Grid.Column="0"  Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  >
           <Viewbox Width="24" Height="24">
  <Path Data="{StaticResource BCRotationAxis}" Fill="#4CAF50"/>
</Viewbox>B
        </TextBlock>
        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding  BAxisActualFeedRateValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>
        <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding  BAxisRemainingFeedValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>

        <TextBlock x:Name="CAxisValue"  Grid.Row="5" Grid.Column="0"  Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  >
           <Viewbox Width="24" Height="24">
  <Path Data="{StaticResource BCRotationAxis}" Fill="#4CAF50"/>
</Viewbox>C
        </TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding  CAxisActualFeedRateValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>
        <TextBlock Grid.Row="5" Grid.Column="2" Text="{Binding  CAxisRemainingFeedValue}" Foreground="Blue" FontSize="30"   TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  ></TextBlock>

        <Grid Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Button Grid.Row="1" Grid.Column="0" Width="100" Height="100" Content="暂停"  Style="{StaticResource PauseStatusButtonStyle}"    Command="{Binding PauseCommand}">
            </Button>

            <Button Grid.Row="1" Grid.Column="1" Width="100" Height="100" Content="启动"  Style="{StaticResource StartStatusButtonStyle}"  Command="{Binding StartCommand}">
            </Button>

        </Grid>

        <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"  Background="Beige">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2"  Text="{Binding MainAxisSpeedDisplay}" Foreground="Black" FontSize="30"   TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Left"  ></TextBlock>

            
            <!-- 替换原 TextBlock，使用 StackPanel 水平排列 -->
            <StackPanel Grid.Row="1" Grid.Column="0" 
            Orientation="Horizontal" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Left">

                <!-- 文字部分 -->
                <TextBlock Text="{Binding OperationModeDisplay, Mode=OneWay}" 
               Foreground="Black" FontSize="30" 
               VerticalAlignment="Center"/>

                <!-- 图标按钮（无边框/背景，悬停有反馈） -->
                <Button Command="{Binding OpenModeSelectionCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    ToolTip="切换运行模式"
                    Margin="8,0,0,0">
                        <Viewbox Width="24" Height="24">
                            <Path Data="{StaticResource ModeSwitch}" 
                          Fill="{Binding ModeIconColor, FallbackValue=#3e0505}"/>
                        </Viewbox>
                </Button>
            </StackPanel>




        </Grid>






    </Grid>
</Page>
